<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageButton
        android:id="@+id/back_to_main_btn"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/trashCan_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="휴지통"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/back_to_main_btn"
        app:layout_constraintTop_toTopOf="@+id/back_to_main_btn"
        app:layout_constraintStart_toEndOf="@id/back_to_main_btn"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/mk_scrap_comp_btn"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:backgroundTint="@color/bin_red"
        android:text="비우기"
        android:textSize="15dp"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="@id/back_to_main_btn"
        app:layout_constraintBottom_toBottomOf="@id/back_to_main_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back_to_main_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trash_folder_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:layout_margin="5dp"
                tools:listitem="@layout/item_scrap"
                tools:itemCount="4"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trash_scrap_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trash_folder_recycler_view"
                android:layout_margin="5dp"
                tools:listitem="@layout/item_scrap"
                tools:itemCount="4"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>