<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_folder_tree_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_folder_tree_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:theme="@style/Widget.AppCompat.Button.Borderless"
        android:background="@color/transparent"
        android:text="@string/root_folder"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:gravity="start|center"
        android:fontFamily="@font/pretendard_medium"
        app:icon="@drawable/ic_folder"
        app:iconTint="@color/theme_blue"
        app:iconPadding="15dp"
        android:paddingStart="26dp"
        app:iconSize="22dp"/>
    
    <ImageView
        android:id="@+id/item_folder_tree_arrow"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="37dp"
        android:layout_height="match_parent"
        android:src="@drawable/right_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>